{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@divaastra/*": ["*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
